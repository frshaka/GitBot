{
  "name": "@frshaka/gitbot",
  "version": "2.1.0",
  "description": "CLI que automatiza mensagens de commit com IA via OpenRouter, formato Conventional Commits com emojis.",
  "bin": {
    "gitbot": "bin/gitbot.js"
  },
  "type": "commonjs",
  "main": "bin/gitbot.js",
  "files": [
    "bin/gitbot.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "node -e \"try{require('fs').chmodSync('bin/gitbot.js',0o755)}catch(e){}\"",
    "release:clean": "node -e \"const fs=require('fs');try{fs.rmSync('dist',{recursive:true,force:true})}catch(e){};fs.mkdirSync('dist',{recursive:true})\"",
    "build:win":   "pkg -t node18-win-x64   -o dist/gitbot-win-x64.exe bin/gitbot.js",
    "build:linux": "pkg -t node18-linux-x64 -o dist/gitbot-linux-x64     bin/gitbot.js",
    "build:mac":   "pkg -t node18-macos-x64 -o dist/gitbot-macos-x64     bin/gitbot.js",
    "build:bin":   "npm run release:clean && npm run build:win && npm run build:linux && npm run build:mac"
  },
  "keywords": [
    "git",
    "commit",
    "conventional-commits",
    "cli",
    "openrouter",
    "ai"
  ],
  "author": "Felipe Rosa",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/frshaka/GitBot.git"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": [
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-win-x64"
    ],
    "assets": []
  }
}
